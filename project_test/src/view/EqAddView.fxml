<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="565.0" prefWidth="817.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.AddEqController">

	<!-- ──────── 좌측 : 이미지 입력 영역 ──────── -->
	<children>
		<Label layoutX="175" layoutY="36" prefHeight="56"
			prefWidth="131" style="-fx-font-size:18px;-fx-font-weight:bold;"
			text="이미지 추가" />

		<StackPane fx:id="imageDropPane" layoutX="6" layoutY="82"
			prefHeight="454" prefWidth="468" onDragOver="#handleDragOver"
			onDragDropped="#handleDragDropped">
			<children>
				<ImageView fx:id="toolImageView" fitHeight="454"
					fitWidth="468" preserveRatio="true" smooth="true" />

				<!-- 빈 공간 안내 문구 -->
				<Label text="여기로 이미지를 드래그하거나\n아래 버튼으로 선택"
					style="-fx-text-fill: derive(-fx-text-base-color,-40%);" />

				<!-- 파일 선택 버튼 -->
				<Button fx:id="chooseImageButton" text="파일 선택"
					onAction="#handleChooseImage"
					style="-fx-background-color:#8D5C59;-fx-text-fill:white;"
					StackPane.alignment="BOTTOM_CENTER" StackPane.margin="0 0 10 0" />
			</children>
		</StackPane>

		<!-- ──────── 우측 : 장비 정보 입력 폼 ──────── -->
		<VBox layoutX="483" layoutY="20" prefWidth="326" spacing="10">

			<!-- 기본 정보 -->
			<GridPane hgap="10" vgap="10">
				<columnConstraints>
					<ColumnConstraints prefWidth="90" />
					<ColumnConstraints prefWidth="220" />
				</columnConstraints>

				<Label text="장비명:" GridPane.rowIndex="0" />
				<TextField fx:id="eqNameField" promptText="예) DSLR 카메라"
					GridPane.rowIndex="0" GridPane.columnIndex="1" />

				<Label text="일련번호:" GridPane.rowIndex="1" />
				<TextField fx:id="serialNumField" promptText="Serial No."
					GridPane.rowIndex="1" GridPane.columnIndex="1" />

				<Label text="대여료:" GridPane.rowIndex="2" />
				<TextField fx:id="costField" promptText="숫자만 입력"
					GridPane.rowIndex="2" GridPane.columnIndex="1" />

				<Label text="대여소:" GridPane.rowIndex="3" />
				<TextField fx:id="officeField" promptText="○○ 대여소"
					GridPane.rowIndex="3" GridPane.columnIndex="1" />

				<Label text="전화번호:" GridPane.rowIndex="4" />
				<TextField fx:id="phoneField" promptText="000-0000-0000"
					GridPane.rowIndex="4" GridPane.columnIndex="1" />

				<Label text="취득일:" GridPane.rowIndex="5" />
				<TextField fx:id="acquisitionDateField"
					promptText="YYYY-MM-DD" GridPane.rowIndex="5"
					GridPane.columnIndex="1" />
			</GridPane>

			<!-- 장비 설명 -->
			<Label text="장비 설명:" />
			<TextArea fx:id="eqInfoArea" prefHeight="150"
				wrapText="true" promptText="장비 상세 설명을 입력하세요." />

			<!-- 저장 버튼 -->
			<Button fx:id="saveButton" text="장비 저장" onAction="#handleSave"
				prefHeight="35" prefWidth="286"
				style="-fx-background-color:#8D5C59;-fx-text-fill:white;-fx-font-weight:bold;" />
		</VBox>
	</children>
</AnchorPane>
